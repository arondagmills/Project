          table.table
            thead
              tr
                th(scope='col') Names
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                th(scope='col') Ward
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                th(scope='col') Phone number
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
