                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                th(scope='col') Update
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                th(scope='col') Delete
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
          tbody
            if Farmerones
              each Farmerone in Farmerones
                    tr
                      td #{Farmerone.Name1} 
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                      td  #{Farmerone.Ward1}
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                      td #{Farmerone.phonenumber}
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                      td #{Farmerone.Gender1}
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                      td
                        a.btn.btn-success(href='/Farmerone/update/'+Farmer one._id) Update
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                      form(method="post" action='/Farmerone/delete')
                                input(type="hidden", placeholder="", name="id", value=Farmerone._id)
                                button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row
        div
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')