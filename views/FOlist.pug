  body
    .container.mt-3
      h2 Farmer one
      table.table
        thead
          tr
            th(scope='col') Name
            th(scope='col') Activities
            th(scope='col') Gender
            th(scope='col') Update
        tbody
          if farmerones.length 
            each farmerone in farmerones 
              tr
                td #{farmerone.Name1}
                td #{farmerone.Activities}
                td #{farmerone.Gender1}
                td
                  form(action='/update_farmer' method='post')
                    input(type="hidden" name='farmerone' value=farmerone._id )
                    button(type='submit') Update
  